{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MIDORI",
  "scopeName": "source.midori",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.midori",
          "match": "//.*$"
        },
        {
          "name": "comment.block.midori",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.midori",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.midori",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.midori",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.midori",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.midori",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.midori",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.midori",
          "match": "\\b(fn|let|var|struct|enum|trait|impl|pub|use|module|if|else|match|for|in|while|loop|break|continue|return|task|spawn|await|unsafe|extern)\\b"
        },
        {
          "name": "constant.language.boolean.midori",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.midori",
          "match": "\\b(Int|Float|Bool|Char|String|Option|Result|Vec)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.midori",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.midori",
          "match": "(\\+|\\-|\\*|/|%|==|!=|<=|>=|<|>|&&|\\|\\||!|=|\\+=|-=|\\*=|/=|%=|:=|->|=>|\\?|\\.\\.|\\.\\.=)"
        }
      ]
    }
  }
}
